        System.out.println(sN.getText());

        setAnzahlSpieler ((int)cb.getSelectedItem());
        System.out.println((int) cb.getSelectedItem());
        try {
            toServer.hostGame(anzahlSpieler, spielerName);

        } catch (Exception ex) {
            System.out.println("TO DO");
        }
    }//GEN-LAST:event_JButtonCreateGameActionPerformed

    private void jButtonRefreshActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButtonRefreshActionPerformed
        // TODO add your handling code here:
        Set<GameInfo> games;

        try {
            games = toServer.getGames();
        } catch (ConnectionException ex) {
            //System.out.println("TO DO");
            return;
        }
        if (games.isEmpty()) {
            JOptionPane.showMessageDialog(null, "No games on server available");
        }
        listModel.removeAllElements();
        for (GameInfo gi : games) {

            listModel.insertElementAt("Game ID: " + Long.toString(gi.getGameID()) + "  "+gi.getNrJoined()+"/" + gi.getGameSize() + "", 0);

        }
        System.out.println("Game Size" + games.size());
        System.out.println("Game Size" +  jList1.getSelectedIndex());

    }//GEN-LAST:event_jButtonRefreshActionPerformed

