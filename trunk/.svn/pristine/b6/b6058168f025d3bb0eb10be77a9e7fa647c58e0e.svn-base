public class ServerApplication {

    private static final Logger logger = Logger.getLogger(ServerApplication.class.getName());

    static {
        try {
            LoggerSettings.initLogging();
        } catch (IOException ex) {
            logger.log(Level.SEVERE, "{0} -> logger could not be started", Thread.currentThread().getName());
        }

        try {
            ConnectionOUT.construct();
        } catch (RemoteException | MalformedURLException ex) {
            logger.log(Level.SEVERE, "{0} -> RMI server could not be set up", Thread.currentThread().getName());
            System.exit(1);
        } catch (SpreadException ex) {
            logger.log(Level.SEVERE, "{0} -> no SPREAD deamon could be reacherd", Thread.currentThread().getName());
            System.exit(1);
        }
    }
    public static void main(String args[]) {

        MORE.todo(ServerApplication.class.getName(),"anything like a gui?");
    }
}
