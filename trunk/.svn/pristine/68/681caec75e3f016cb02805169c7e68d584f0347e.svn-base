package net.technikumwien.bic4b18_01.client.rmi;

import at.falb.games.alcatraz.api.Alcatraz;
import java.net.MalformedURLException;
import java.rmi.Naming;
import java.rmi.NotBoundException;
import java.rmi.RemoteException;
import java.rmi.registry.LocateRegistry;
import java.rmi.server.UnicastRemoteObject;
import java.util.logging.Level;
import java.util.logging.Logger;
import static net.technikumwien.bic4b18_01.client.rmi.Client2Client.game;
import net.technikumwien.bic4b18_01.common.rmi.MoveInfo;
import net.technikumwien.bic4b18_01.common.rmi.RMI_Client2Client;

/**
 *
 *
 */
public class Alcatraz_Client_A {
    
 public static void main(String args[]) {
        RMI_Client2Client c2c = new Client2Client();
     try {
         UnicastRemoteObject.exportObject(c2c, 1099);
     } catch (RemoteException ex) {
         Logger.getLogger(Alcatraz_Client_A.class.getName()).log(Level.SEVERE, null, ex);
     }
         try {
         LocateRegistry.createRegistry(1099);
     } catch (RemoteException ex) {
         Logger.getLogger(Alcatraz_Client_A.class.getName()).log(Level.SEVERE, null, ex);
     }
        RMI_Client2Client outgoing = new Client2Client();
        while (true) {
            try {
                Naming.rebind("rmi://localhost:1099/AlcatrazGameService", c2c);
                break;
            } catch (RemoteException | MalformedURLException ex) {
                Logger.getLogger(Alcatraz_Client_A.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
        while (true) {
            try {
                outgoing = (RMI_Client2Client) Naming.lookup("rmi://localhost:1100/AlcatrazGameService");
                break;
            } catch (NotBoundException | MalformedURLException | RemoteException ex) {
                Logger.getLogger(Alcatraz_Client_A.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
        
        game.init(2, 0);
        game.getPlayer(0).setName("Player 1");
        game.getPlayer(1).setName("Player 2");
        game.showWindow();
        game.addMoveListener(new AlcatrazMoveListener(outgoing));
        game.start();
    }
}
