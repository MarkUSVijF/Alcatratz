package net.technikumwien.bic4b18_01.common.settings;

import java.util.logging.Level;
import java.util.logging.Logger;

/**
 * used as marker
 * @author Florian
 */
public enum TODO {
    EXCEPTION,
    METHOD,
    MORE;

    public void todo(String className) {
        Logger.getLogger(className).log(Level.INFO, "[TODO] {0} to do in {1}", new Object[]{this.name(),className});
    }

    public static void todo(String className, String msg) {
        Logger.getLogger(className).log(Level.INFO, "[TODO] {0}", msg);
    }
}
