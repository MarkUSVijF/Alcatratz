    private void GetGamesActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_GetGamesActionPerformed
        // TODO add your handling code here:
        HashSet<GameInfo> games = null;
       
        try{
           games = ss.getGames(); 
        }catch (Exception ex){
        System.out.println("TO DO");
        }
        // no game created yet
        if(games == null)
        {
            JOptionPane.showMessageDialog(null,"No games on server available");
        }
        // add all found games at the beginning of the list
        else {
            for(GameInfo gi: games) {
                listModel.insertElementAt("[Game ID: "+Long.toString(gi.getGameID())+" Max Players: "+gi.getGameSize()+" ]", 0);
            }
        }
    }//GEN-LAST:event_GetGamesActionPerformed

