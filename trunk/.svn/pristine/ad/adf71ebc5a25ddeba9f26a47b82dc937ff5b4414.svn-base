    private void GetGamesActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_GetGamesActionPerformed
        // TODO add your handling code here:
        //Set<GameInfo> games;
        try {
            games = toServer.getGames();
        } catch (ConnectionException ex) {
            //System.out.println("TO DO");
            return;
        }
        if (games.isEmpty()) {
            JOptionPane.showMessageDialog(null, "No games on server available");
        }
        listModel.removeAllElements();
        for (GameInfo gi : games) {
            listModel.insertElementAt("Game ID: " + Integer.toString(gi.getGameID()) + "  "+gi.getNrJoined()+"/" + gi.getGameSize() + "", 0);
        }
        
       //Testschleife
        //for (int i = 0; i < 10; i++) {
           // listModel.addElement("Test " + i);

       //}
    }//GEN-LAST:event_GetGamesActionPerformed

